<div class="m-4 text-center">
  <h2>Menu</h2>
</div>

<div class="ml-4 mr-4">
  <% if @cocktails.any? %>
    <ul>
      <% @cocktails.each do |cocktail| %>
        <li>
          <% if @cocktail.photo.attached? %>
            <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
          <% end %>
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
        </li>
        <% end %>
    </ul>
  <% else %>
    <p class="empty-state text-center">You don't have any cocktails yet.<br>
    🎉 Let's get the party started 🎉</p>
  <% end %>
</div>