
    <div class="text-center mb-4">
      <h2>Menu</h2>
    </div>
    <div class="ml-4 mr-4">
        <% if @cocktails.any? %>
          <ul class="list-group list-group-flush">
            <% @cocktails.each do |cocktail| %>
              <li class="list-group-item" id="cocktails-list">
                <%= link_to cocktail.name, cocktail_path(cocktail), class: 'badge badge-primary badge-pill', id: 'cocktail-badges' %>
              <small><%= "⭐" * rand(1..5) %></small>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="empty-state text-center">You don't have any cocktails yet.<br>
          🎉 Let's get the party started 🎉</p>
        <% end %>
    </div>
