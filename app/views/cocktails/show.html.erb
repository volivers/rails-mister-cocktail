  <% if notice.present? %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= notice.html_safe %>

    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<div class="m-4 text-center">
  <% if @cocktail.photo %>
    <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  <% end %>
    <h2><%= @cocktail.name %>🍹</h2>
</div>

<div class="ml-4 mr-4">
  <div class="m-4">
    <%= link_to cocktails_path do %>
      &larr; Back to list
    <% end %>
  </div>

  <div class="m-4">
    <h4>Ingredients:</h4>

    <% if alert.present? %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= alert.html_safe %>

        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>

    <% if @cocktail.doses.any? %>
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li>
            <%= dose.description %> <%= dose.ingredient.name %>
            <%= link_to dose_path(dose), method: :delete,
              data: { confirm: 'Really?!', toggle: 'tooltip', placement: 'top' },
              title: 'Delete ingredient',
              class: 'text-danger' do %>
              <small><i class="fa fa-trash"></i></small>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="empty-state mt-2">
        You don't have any ingredients yet.
      </p>
    <% end %>
  </div>

  <div class="m-4">
    <%= link_to new_cocktail_dose_path(@cocktail), class: 'btn btn-sm btn-outline-secondary' do %>
      <i class="fa fa-plus mr-2"></i> Add ingredient dose
    <% end %>
  </div>
</div>